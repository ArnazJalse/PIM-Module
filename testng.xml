<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
  <test name="Login">
    <classes>
      <class name="com.PIMModule.OrangeHRMLogin">
      	<methods>
      		<include name="loginWithValidCredentials"></include>
      		<include name="LoginWithInvalidCredentials"></include>
      		<include name="loginWithEmptyFields"></include>
      	</methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="EmployeeManagement">
    <classes>
      <class name="com.PIMModule.EmployeeMgmt">
      	<methods>
      		<include name="addEmployee"></include>
      		<include name="UpdateEmployee"></include>
      		<include name="deleteEmployee"></include>
      	</methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="ReportManagement">
    <classes>
      <class name="com.PIMModule.ReportMgmt">
      	<methods>
      		<include name="AddReport"></include>
      		<include name="displayReportDetails"></include>
      		<include name="UpdateReport"></include>
      		<include name="deleteReport"></include>
      	</methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="OptionalFields">
    <classes>
      <class name="com.PIMModule.OptionalField">
      	<methods>
      		<include name="optinalFieldToggleTurnOff"></include>
      	</methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="CustomFields">
    <classes>
      <class name="com.PIMModule.CustomeField">
      	<methods>
      		<include name="addCustomeField"></include>
      		<include name="updateCustomeField"></include>
      		<include name="deleteCustomeField"></include>
      	</methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="ReportingMethods">
    <classes>
      <class name="com.PIMModule.ReportingMethod">
      	<methods>
      		<include name="addReportingMethod"></include>
      		<include name="updateReportingMethod"></include>
      		<include name="deleteReportingMethod"></include>
      	</methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="TerminationReasons">
    <classes>
      <class name="com.PIMModule.TerminationReason">
      	<methods>
      		<include name="addTerminationReason"></include>
      		<include name="updateTerminationReason"></include>
      		<include name="deleteTerminationReason"></include>
      	</methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="Logout">
    <classes>
      <class name="com.PIMModule.OrangeHRMLogout">
      	<methods>
      		<include name="logOut"></include>
      	</methods>
      </class>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
